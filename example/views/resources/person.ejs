<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head'); %>

  <body class="container">
    <%- include('../partials/header'); %>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item" aria-current="page">
            <a href="/">
              Home
            </a>
          </li>
          <li class="breadcrumb-item" aria-current="page">
            <a href="/<%= app %>">
              <%= app %>
            </a>
          </li>
          <li class="breadcrumb-item" aria-current="page">
            <a href="/<%= app %>/<%= vertexName %>">
              <%= vertexName %>
            </a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            Get (<%= item.id %>)
          </li>
        </ol>
      </nav>
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="<%= item.attributes.demographic_avatar_url %>" alt="" class="rounded-circle" width="150">
                <div class="mt-3">
                  <h4>
                    <%= item.attributes.nickname || item.attributes.first_name %>
                      <%= item.attributes.last_name %>
                  </h4>
                  <p class="text-secondary mb-1">
                    <%= item.attributes.membership %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Full Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= item.attributes.name %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Created</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= ( new Date(item.attributes.created_at)).toLocaleString() %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Birthdate</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= item.attributes.birthdate || '(unknown)' %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Background Check</h6>
                </div>
                <div class="col-sm-9 text-secondary">

                  <% if (item.attributes.passed_background_check) { %>
                    <%- include('../partials/green_check'); %>
                      <% } else { %>
                        <%- include('../partials/red_x'); %>
                          <% } %>
                </div>
              </div>
              <hr>
              <hr>
              <div class="row">
                <div class="col-sm-12">
                  <a class="btn btn-outline-primary" href="/<%= app %>/<%= vertexName %>/<%= item.id %>/edit">Edit</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="container">
          <pre>
            <%- rawJSON %>
          </pre>
        </div>
  </body>

</html>